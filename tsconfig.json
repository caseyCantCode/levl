{
    "compilerOptions": {
        "lib": [
            "ES6"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES6",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "declaration": true,
        "resolveJsonModule": true,
        "outDir": "dist",                        
        "rootDir": "./src",
    },
    "include": [
        "src"
      ],
    "exclude": [
        "node_modules"
    ],
}